<Window x:Class="UniversalBusinessSystem.Views.CreateAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Create Account" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Create New Business Account" 
                       FontSize="24" FontWeight="Bold"
                       Foreground="{DynamicResource MaterialDesignBody}"/>
            <TextBlock Text="Set up your business with the appropriate shop type and configuration"
                       Margin="0,10,0,0"
                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
        </StackPanel>
        
        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Business Information -->
                <GroupBox Header="Business Information" Margin="0,0,0,15">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Business Name:" Margin="0,0,0,5"/>
                        <TextBox Grid.Row="1" Grid.Column="0" x:Name="txtBusinessName" 
                                 materialDesign:HintAssist.Hint="Enter business name"
                                 Margin="0,0,10,10"/>
                        
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Shop Type:" Margin="10,0,0,5"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="cmbShopType" 
                                  materialDesign:HintAssist.Hint="Select shop type"
                                  Margin="10,0,0,10"
                                  SelectionChanged="ShopType_SelectionChanged"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Address:" Margin="0,10,0,5"/>
                        <TextBox Grid.Row="3" Grid.Column="0" x:Name="txtAddress" 
                                 materialDesign:HintAssist.Hint="Enter business address"
                                 Margin="0,0,10,0"
                                 TextWrapping="Wrap"
                                 Height="60"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="Contact Number:" Margin="10,10,0,5"/>
                        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtContactNumber" 
                                 materialDesign:HintAssist.Hint="Enter contact number"
                                 Margin="10,0,0,0"/>
                    </Grid>
                </GroupBox>
                
                <!-- Shop Configuration -->
                <GroupBox Header="Shop Configuration" Margin="0,0,0,15" x:Name="grpShopConfig">
                    <StackPanel Margin="15">
                        <TextBlock Text="Units:" FontWeight="Bold" Margin="0,0,0,10"/>
                        <WrapPanel x:Name="wpUnits" Orientation="Horizontal">
                            <!-- Units will be added dynamically -->
                        </WrapPanel>
                        
                        <TextBlock Text="Categories:" FontWeight="Bold" Margin="0,20,0,10"/>
                        <WrapPanel x:Name="wpCategories" Orientation="Horizontal">
                            <!-- Categories will be added dynamically -->
                        </WrapPanel>
                    </StackPanel>
                </GroupBox>
                
                <!-- Admin Account -->
                <GroupBox Header="Admin Account" Margin="0,0,0,15">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Full Name:" Margin="0,0,0,5"/>
                        <TextBox Grid.Row="1" Grid.Column="0" x:Name="txtFullName" 
                                 materialDesign:HintAssist.Hint="Enter full name"
                                 Margin="0,0,10,10"/>
                        
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Username:" Margin="10,0,0,5"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtUsername" 
                                 materialDesign:HintAssist.Hint="Enter username"
                                 Margin="10,0,0,10"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Email:" Margin="0,10,0,5"/>
                        <TextBox Grid.Row="3" Grid.Column="0" x:Name="txtEmail" 
                                 materialDesign:HintAssist.Hint="Enter email address"
                                 Margin="0,0,10,10"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="Phone:" Margin="10,10,0,5"/>
                        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtPhone" 
                                 materialDesign:HintAssist.Hint="Enter phone number"
                                 Margin="10,0,0,10"/>
                        
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Password:" Margin="0,10,0,5"/>
                        <PasswordBox Grid.Row="5" Grid.Column="0" x:Name="txtPassword" 
                                     materialDesign:HintAssist.Hint="Enter password"
                                     Margin="0,0,10,0"/>
                        
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="Confirm Password:" Margin="10,10,0,5"/>
                        <PasswordBox Grid.Row="5" Grid.Column="1" x:Name="txtConfirmPassword" 
                                     materialDesign:HintAssist.Hint="Confirm password"
                                     Margin="10,0,0,0"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Click="Cancel_Click" 
                    Margin="0,0,10,0"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
            <Button Content="Create Account" 
                    Click="Create_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>
