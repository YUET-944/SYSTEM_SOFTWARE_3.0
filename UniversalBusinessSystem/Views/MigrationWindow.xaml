<Window x:Class="UniversalBusinessSystem.Views.MigrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Database Migration" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="SQLite to PostgreSQL Migration" 
                       FontSize="24" FontWeight="Bold"
                       Foreground="{DynamicResource MaterialDesignBody}"/>
            <TextBlock Text="Migrate your database from SQLite to PostgreSQL for better performance and scalability"
                       Margin="0,10,0,0"
                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
        </StackPanel>
        
        <!-- Migration Steps -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Step 1: PostgreSQL Connection -->
                <Border BorderBrush="{DynamicResource MaterialDesignPrimary}" 
                        BorderThickness="2" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,15"
                        Background="{DynamicResource MaterialDesignCardBackground}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <materialDesign:PackIcon Kind="Database" 
                                                   Width="24" Height="24" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"
                                                   Foreground="{DynamicResource MaterialDesignPrimary}"/>
                            <TextBlock Text="Step 1: PostgreSQL Connection" 
                                       FontWeight="Bold" 
                                       FontSize="16"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Host:" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtHost" Text="localhost" 
                                         materialDesign:HintAssist.Hint="localhost"/>
                                
                                <TextBlock Text="Port:" Margin="0,10,0,5"/>
                                <TextBox x:Name="txtPort" Text="5432" 
                                         materialDesign:HintAssist.Hint="5432"/>
                                
                                <TextBlock Text="Database:" Margin="0,10,0,5"/>
                                <TextBox x:Name="txtDatabase" Text="UniversalBusinessDB" 
                                         materialDesign:HintAssist.Hint="UniversalBusinessDB"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Username:" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtUsername" Text="postgres" 
                                         materialDesign:HintAssist.Hint="postgres"/>
                                
                                <TextBlock Text="Password:" Margin="0,10,0,5"/>
                                <PasswordBox x:Name="txtPassword" 
                                            materialDesign:HintAssist.Hint="Enter password"/>
                                
                                <Button Content="Test Connection" 
                                        Click="TestConnection_Click" 
                                        Margin="0,15,0,0"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Step 2: Backup -->
                <Border BorderBrush="{DynamicResource MaterialDesignSecondary}" 
                        BorderThickness="2" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,15"
                        Background="{DynamicResource MaterialDesignCardBackground}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <materialDesign:PackIcon Kind="BackupRestore" 
                                                   Width="24" Height="24" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"
                                                   Foreground="{DynamicResource MaterialDesignSecondary}"/>
                            <TextBlock Text="Step 2: Backup SQLite Database" 
                                       FontWeight="Bold" 
                                       FontSize="16"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Create a backup of your current SQLite database before migration" 
                                   Margin="0,0,0,10"/>
                        <Button Content="Create Backup" 
                                Click="CreateBackup_Click" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"/>
                    </StackPanel>
                </Border>
                
                <!-- Step 3: Migration -->
                <Border BorderBrush="{DynamicResource MaterialDesignError}" 
                        BorderThickness="2" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,15"
                        Background="{DynamicResource MaterialDesignCardBackground}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <materialDesign:PackIcon Kind="DatabaseSync" 
                                                   Width="24" Height="24" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"
                                                   Foreground="{DynamicResource MaterialDesignError}"/>
                            <TextBlock Text="Step 3: Perform Migration" 
                                       FontWeight="Bold" 
                                       FontSize="16"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="This will create PostgreSQL schema and import all data" 
                                   Margin="0,0,0,10"/>
                        <CheckBox x:Name="chkConfirm" 
                                  Content="I understand this will migrate all data" 
                                  Margin="0,0,0,10"
                                  Checked="chkConfirm_Checked"
                                  Unchecked="chkConfirm_Unchecked"/>
                        <Button x:Name="btnMigrate" 
                                Content="Start Migration" 
                                Click="StartMigration_Click" 
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="{DynamicResource MaterialDesignError}"
                                IsEnabled="False"/>
                    </StackPanel>
                </Border>
                
                <!-- Log -->
                <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="20"
                        Background="{DynamicResource MaterialDesignCardBackground}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <materialDesign:PackIcon Kind="Console" 
                                                   Width="24" Height="24" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>
                            <TextBlock Text="Migration Log" 
                                       FontWeight="Bold" 
                                       FontSize="16"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBox x:Name="txtLog" 
                                 Height="150" 
                                 IsReadOnly="True" 
                                 VerticalScrollBarVisibility="Auto"
                                 TextWrapping="Wrap"
                                 FontFamily="Consolas"
                                 FontSize="12"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Status and Progress -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock x:Name="txtStatus" 
                           Text="Ready to migrate..." 
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <ProgressBar x:Name="progressBar" 
                             Height="10" 
                             Visibility="Collapsed"
                             Style="{StaticResource MaterialDesignLinearProgressBar}"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Close" 
                        Click="Close_Click" 
                        Margin="0,0,10,0"
                        Style="{StaticResource MaterialDesignOutlinedButton}"/>
                <Button Content="Help" 
                        Click="Help_Click"
                        Style="{StaticResource MaterialDesignOutlinedButton}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
